<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Form Validation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <style>
        .form-control:invalid {
            border-color: red;
            background-color: #fef2f2;
        }
        .form-control:invalid + .error-message {
            display: block;
            color: red;
            font-size: 14px;
        }
        .error-message {
            display: none;
        }
        .submit-btn {
            background-color: red;
            color: white;
            width: 100%;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <form id="validationForm" class="needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" required>
            <div class="error-message">Name is required</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" required>
            <div class="error-message">Email is required</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" required>
            <div class="error-message">Password is required</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Hobbies</label>
            <select class="form-select" required>
                <option value="">Select a hobby</option>
                <option value="reading">Reading</option>
                <option value="sports">Sports</option>
                <option value="music">Music</option>
            </select>
            <div class="error-message">Please select a hobby</div>
        </div>

        <button type="submit" class="btn submit-btn">Submit</button>
    </form>
</div>

<script>
    (function () {
        'use strict';
        var form = document.getElementById('validationForm');
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    })();
</script>

</body>
</html>
